<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elliothannahiii.kotd.FavoriteShoeActivity">

    <RelativeLayout
        android:id="@+id/fav_title_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title_fav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Favorite Shoe"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:textAlignment="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:id="@+id/fav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/kotd_home_icon"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/kotd_logo"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is This Your Favorite Shoe?"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/fav_title_bar"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/fav_yes_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="YES"
            android:backgroundTint="@android:color/holo_green_light"
            android:layout_marginLeft="100dp"
            />

        <Button
            android:id="@+id/fav_no_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="NO"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="If Yes, this shoe will get priority when picking your kicks for the day."
        android:textColor="@android:color/holo_blue_dark"
        android:layout_margin="35dp"
        android:id="@+id/textView" />


</RelativeLayout>
